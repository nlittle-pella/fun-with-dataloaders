{
    "name": "author-api",
    "version": "1.0.0",
    "description": "API for author",
    "private": true,
    "main": "index.js",
    "scripts": {
        "docker:start": "docker compose up -d --build && npm run flyway:migrate",
        "docker:infra": "docker compose up --build -d author-db && npm run flyway:migrate",
        "docker:stop": "docker compose down",
        "flyway:migrate": "./scripts/flyway-migrate.sh",
        "start": "NODE_ENV=localhost node --watch index.js",
        "lint": "eslint . --ext .js,.json",
        "lint:fix": "eslint . --fix --ext .js,.json",
        "coverage": "jest --coverage",
        "test": "npm run lint && npm run coverage",
        "test:acceptance": "cd acceptance && npm run acceptance",
        "verify": "npm run test && npm run docker:start && npm run test:acceptance",
        "sql:proxy": "./scripts/connect-to-db.sh",
        "replace": "node scripts/replace.js",
        "prepare": "simple-git-hooks"
    },
    "type": "module",
    "author": "Jason Bradley (bradleyj@pella.com)",
    "license": "UNLICENSED",
    "dependencies": {
        "@pella/graphql-api": "1.3.3",
        "@pella/logger": "4.2.1",
        "@pella/postgres-adapter": "1.1.9",
        "@pella/telemetry": "1.1.3",
        "config": "3.3.11",
        "joi": "17.13.0"
    },
    "devDependencies": {
        "@babel/preset-env": "7.24.4",
        "@pella/eslint-config-pella": "^1.0.26",
        "babel-jest": "29.7.0",
        "chance": "1.1.11",
        "eslint": "^8.57.0",
        "jest": "29.7.0",
        "jest-extended": "4.0.2",
        "replace-in-file": "7.1.0",
        "simple-git-hooks": "^2.11.1"
    }
}
